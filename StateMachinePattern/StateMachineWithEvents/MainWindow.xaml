<Window x:Class="StateMachineWithEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StateMachineWithEvents"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="{Binding Path=StateName}" HorizontalAlignment="Left" Height="26" Margin="10,92,0,0" VerticalAlignment="Top" Width="497"/>
        <Slider HorizontalAlignment="Left" Height="22" Margin="19,56,0,0" VerticalAlignment="Top" Width="227" Minimum="0" Maximum="1000" Value="{Binding SliderValue}"/>

    </Grid>
</Window>
